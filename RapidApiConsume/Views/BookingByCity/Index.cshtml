@model List<BookingApiViewModel.Result>

@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


@using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
{
    <label>Şehir id bilgisini giriniz</label>
    <input type="text" class="form-control" name="cityID" />
    <br />
    <button class="btn btn-primary">Şehir Otelleri Listele</button>
}

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <td>Otel Adı</td>
            <td>Otel Puanı</td>
            <td>Detaylar</td>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </table>
</div>