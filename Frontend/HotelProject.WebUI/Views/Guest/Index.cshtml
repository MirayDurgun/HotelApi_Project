@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-striped verticle-middle">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>

            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="/Guest/DeleteGuest/@item.GuestId" class="btn mb-1 btn-rounded gradient-2">Sil</a></td>
            <td><a href="/Guest/UpdateGuest/@item.GuestId" class="btn mb-1 btn-rounded gradient-3">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/Guest/AddGuest/" class="btn btn-info">Yeni Müşteri Girişi</a>
