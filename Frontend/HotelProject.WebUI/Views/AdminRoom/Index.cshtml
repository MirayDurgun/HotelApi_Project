@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-striped verticle-middle">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>

            <th>@count</th>
            <td><span class="radient-1 btn-rounded">@item.RoomNumber</span></td>
            <td>@item.Title</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded gradient-2">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded gradient-3">Güncelle</a></td>
        </tr>

    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-info">Yeni Oda Girişi</a>
