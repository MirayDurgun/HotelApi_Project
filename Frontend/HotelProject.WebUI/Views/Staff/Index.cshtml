@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered table-striped verticle-middle">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.StaffID</th>
            <td><span class="radient-1 btn-rounded">@item.Name</span></td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded gradient-2">Sil</a></td>
            <td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded gradient-3">Güncelle</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded gradient-4">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Girişi</a>
