@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}



<h4 class="card-title">Rezervasyonlar</h4>
<div class="table-responsive">
    <table class="table table-bordered verticle-middle">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Misafir</th>
                <th scope="col">Giriş Tarihi</th>
                <th scope="col">Çıkış Tarihi</th>
                <th scope="col">Durum</th>
                <th scope="col">Onayla</th>
                <th scope="col">İptal Et</th>
                <th scope="col">Beklet</th>
                <th scope="col">Güncelle</th>
                <th scope="col">Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.Checkin).ToString("dd MMMM yyyy"))</td>
                    <td>@(((DateTime)item.Checkout).ToString("dd MMMM yyyy"))</td>
                    <td><span class="badge badge-secondary px-2">@item.Status</span></td>
                    <td>
                        <a href="/BookingAdmin/ApprovedReservation/@item.BookingId" class="btn btn-outline-primary">
                            <i class="fa fa-check-square"> Onayla</i>
                        </a>
                    </td>

                    <td>
                        <a href="#" class="btn btn-outline-danger">
                            <i class="fa fa-close"> İptal Et</i>
                        </a>
                    </td>

                    <td>
                        <a href="#" class="btn btn-outline-warning">
                            <i class="fa fa-pause"> Beklet</i>
                        </a>
                    </td>

                    <td>
                        <a href="#" class="btn btn-outline-info">
                            <i class="fa fa-pencil"> Güncelle</i>
                        </a>
                    </td>

                    <td>
                        <a href="#" class="btn btn-outline-dark">
                            <i class="fa fa-info-circle"> Detaylar</i>
                        </a>
                    </td>


                </tr>
            }

        </tbody>
    </table>
</div>
